/* pages/redTopic/redTopic.wxss */

.header image {
  height: 300rpx;
  width: 100vw;
}

.body {
  height: calc(100vh - 300rpx);
  margin-left: 10rpx;
}
.body .content {
  height: 80rpx;
  display: flex;
  margin: 20rpx 20rpx 0 0;
  font-size: 28rpx;
}

.body .content image {
  height: 80rpx;
  width: 80rpx;
  border-radius: 8rpx;
  margin-right: 10rpx;
}
.body .content text:nth-of-type(1) {
  flex: 1;
  border-bottom: 2rpx solid;
  align-items: center;
  min-height: 80rpx;
  justify-items: center;
  flex-wrap: wrap;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.body .content text:nth-of-type(2) {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}
